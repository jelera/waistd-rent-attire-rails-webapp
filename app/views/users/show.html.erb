<!-------------------->
<!-- FLASH Messages -->
<!-------------------->
<div class="row align-center">
  <div class="column medium-6">
    <% if logged_in? %>
          <% if flash[:message] %>
            <div class="callout success">
              <h5>Successfull Login</h5>
              <h4><%= flash[:message] %></h4>
            </div>
          <% end %>
    <% else %>
    <div class="callout alert">
      <% if flash[:message] %>
        <h4><%= flash[:message] %></h4>
      <% end %>
      <p>Please <%= link_to "Login to your profile", login_path %> to make a rent your selected attire!</p>
    </div>
    <% end %>
  </div>
</div>

<% if logged_in? && current_user.id == @user.id %>
<div class="row align-center">
  <div class="columns medium-8">
    <h1>My Profile</h1>
    <div class="row">
      <div class="columns medium-6">
      <img src="<%= @user.picture_url %>" alt="">
      </div>
      <div class="columns medium-6">
        <h2><%= @user.full_name %></h2>
        <p>
          Birthday: <%= @user.birthday %>
        </p>
    <p>
      Email: <%= @user.email %>
    </p>
    <p>
      Preferred Style: <%=  @user.preferred_style %>
    </p>
    <p>
      Height: <%=  @user.height_to_ft %>
    </p>
    <div class="row">
      <div class="columns medium-4">
        <p>
          Top Size: <%=  @user.top_size %>
        </p>
      </div>
      <div class="columns medium-4">
        <p>
          Bottom Size: <%=  @user.bottom_size %>
        </p>
      </div>
      <div class="columns medium-4">
        <p>
          Shoe Size: <%=  @user.shoe_size %>
        </p>
      </div>

    </div>
      </div>

    </div>
    <div class="text-center">
      <% if @user.id == current_user.id %>
        <%= link_to "Edit My Profile", edit_user_path(current_user), class: "success button" %>
        <%= link_to "Log Out" , "/logout", method: "delete", class: "alert button" %>
      <% end %>
    </div>
  </div>
</div>
<% else %>
<div class="row align-center">
  <div class="columns medium-8">
    <h1><%= @user.first_name%>'s Profile</h1>
  </div>
</div>
<% end %>


<% unless @user.outfits.empty? %>
<div class="row">
  <div class="columns medium-10">
  <% if logged_in? && current_user.id == @user.id %>
    <h2>My Outfits</h2>
  <% else %>
    <h2><%= @user.first_name%>'s Outfits</h2>
  <% end %>

  </div>
</div>
<div class="row small-up-2 medium-up-3">

  <% @outfits.each do |outfit| %>
  <!-- Card Element-->
  <div class="column">
    <a href="<%= outfit_path(outfit)  %>">
      <div class="card" style="min-height: 800px;">
        <img src="<%= outfit.picture_url %>">
        <div class="card-section">
          <h4><%= outfit.name.titleize %></h4>
          <p>
            <%= outfit.description %>
          </p>
          <p class='text-right'>
            <strong>$<%= outfit.price %></strong>
          </p>
        </div>
      </div>
    </a>
  </div><!-- end .column card-->

  <% end %>
<% end %>
